doctype html
html(lang="ja")
  head
    title= "ppt-museum"
    meta(charset="utf-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport",content="width=device-width, initial-scale=1")
    meta(name="description", content="powerpoint uploader")
    meta(name="author", content="kaakaa")

    link(href="/ppt-museum/css/style.css", rel="stylesheet")
    // bower:css
    link(rel='stylesheet', href='/ppt-museum/bootswatch-dist/css/bootstrap.min.css')
    // endbower
  body
    nav.navbar.navbar-inverse.navbar-fixed-top(role="navigation")
      .container
        .navbar-header
          button.navbar-toggle(type="button", data-toggle="collapse", data-target="#bs-example-navbar-collapse-1")
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href="/") PPT-MUSEUM
        .collapse.navbar-collapse#bs-example-navbar-collapse-1
          ul.nav.navbar-nav
            li
              a(href="/ppt-museum/upload") upload

    .container
      block content

      footer
        .row
          .col-lg-12
            p Copyright &copy; kaakaa 2016

    // bower:js
    script(src='/ppt-museum/jquery/dist/jquery.min.js')
    script(src='/ppt-museum/bootswatch-dist/js/bootstrap.min.js')
    script(src='/ppt-museum/bootstrap-validator/dist/validator.min.js')
    // endbower
    :js
      (function ($) {
        $(document).ready(function() {
          $(".navbar").hide();

          $(function() {
            $(window).scroll(function() {
              if ($(this).scrollTop() > 300) {
                $('.navbar').fadeIn();
              } else {
                $('.navbar').fadeOut();
              }
            });
          });
        });
      }(jQuery));
      $("button[id^='remove-slide-']").on('click', function() {
        var id = $(this).data('id');
        $.ajax({
          type: 'DELETE',
          url: '/ppt-museum/slide/delete/' + id,
          success: function(data) {
            console.log(data);
            location.reload();
          },
          error: function(err) {
            alert("error" + JSON.stringify(err));
          }
        });
      });
