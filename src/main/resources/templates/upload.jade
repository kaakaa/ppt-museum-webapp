doctype html
html(lang="ja")
  head
    title= "ppt-museum"
    meta(charset="utf-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport",content="width=device-width, initial-scale=1")
    meta(name="description", content="powerpoint uploader")
    meta(name="author", content="kaakaa")

    // bower:css
    link(rel='stylesheet', href='/ppt-museum/bootstrap/dist/css/bootstrap.min.css')
    link(rel='stylesheet', href='/ppt-museum/bootstrap/dist/css/bootstrap-theme.min.css')
    // endbower
  body
    nav.navbar.navbar-inverse.navbar-fixed-top(role="navigation")
      .container
        .navbar-header
          button.navbar-toggle(type="button", data-toggle="collapse", data-target="#bs-example-navbar-collapse-1")
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href="/") PPT-MUSEUM
        .collapse.navbar-collapse#bs-example-navbar-collapse-1
          ul.nav.navbar-nav
            li
              a(href="/ppt-museum/upload") upload
    .container
      .row
        .col-lg-12
          h3.page-header Upload Slide

      .row
        form(method="post", action="/ppt-museum/upload", enctype="multipart/form-data", data-toggle="validator", role="form")
          fieldset.form-group
            label(for="slideTitle") Slide Title (required)
            input.form-control(type="text", name="title", placeholder="Enter Slide Title", id="slide-title", required)
          fieldset.form-group
            label(for="Description") Description
            input.form-control(type="text", name="desc", placeholder="Enter The Description")
          fieldset.form-group
            label(for="Description") Tags
            input.form-control(type="text", name="tags", placeholder="exmple - java, morphia, docker")
            small.text-muted Input keyword separated comma.
          fieldset.form-group
            label(for="Description") File (required)
            input.form-control(type="file", name="file", required)
            small.text-muted File format you can upload are .ppt/.pptx/.pdf .
          button.btn.btn-primary(type="submit") Upload

        footer
          .row
            .col-lg-12
          p Copyright &copy; kaakaa 2016

    // bower:js
    script(src='/ppt-museum/jquery/dist/jquery.min.js')
    script(src='/ppt-museum/bootstrap/dist/js/bootstrap.min.js')
    script(src='/ppt-museum/bootstrap-validator/dist/validator.min.js')
    // endbower
